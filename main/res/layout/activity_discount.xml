<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:id="@+id/discount_layout"
    tools:context=".DiscountActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:paddingLeft="30dp"
            android:src="@drawable/applogo"/>

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/arrow"/>

    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#d4d2d2"/>

    <TextView
        android:id="@+id/tvDiscount"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="@string/tvDiscount"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="17sp"
        android:gravity="center"/>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d4d2d2"/>

    <TextView
        android:id="@+id/tvSale1"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:background="@drawable/mapbuttondesign"
        android:elevation="1dp"
        android:padding="10dp"
        android:textColor="@color/textColor"
        android:textSize="20sp"
        android:text="Until: \nContent: "
        android:layout_gravity="center"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/tvSale2"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:background="@drawable/mapbuttondesign"
        android:elevation="1dp"
        android:padding="10dp"
        android:textColor="@color/textColor"
        android:textSize="20sp"
        android:text="Until: \nContent: "
        android:layout_gravity="center"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/tvSale3"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:background="@drawable/mapbuttondesign"
        android:elevation="1dp"
        android:padding="10dp"
        android:textColor="@color/textColor"
        android:textSize="20sp"
        android:text="Until: \nContent: "
        android:layout_gravity="center"
        android:layout_marginTop="40dp"/>

</LinearLayout>